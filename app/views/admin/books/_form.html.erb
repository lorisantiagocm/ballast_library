<%= form_with(model: @book, url: @book.persisted? ? admin_book_path : admin_books_path) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre %>
  </div>

  <div class="field">
    <%= form.label :total_copies %>
    <%= form.number_field :total_copies %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
